<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Categories</title>
    <style>
        body {
            background-color: #fde8e8; /* light pink background */
            font-family: 'Arial', sans-serif; 
        }
        h2 {
            color: black; /* black header text */
        }
        .btn-primary {
            background-color: #ff9aa2; /* light pink button */
            border-color: #ff9aa2;
        }
        .btn-primary:hover {
            background-color: #ff6f91; /* darker pink on hover */
            border-color: #ff6f91;
        }
        .btn-warning {
            background-color:rgb(255, 248, 117); /* Yellow edit button */
        }
        .btn-danger {
            background-color: #ff3a3a; /* Red delete button */
        }
    </style>
</head>
<body>
    <%- include('navbar') %>

    <div class="container">
        <br>
        <div class="text-center"><h2>Categories</h2></div>
        <br>
        <div class="mb-3 text-end">
            <a href="/addCategory" class="btn btn-primary">Add Category</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th scope="col">Category Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <td><%= category.categoryName %></td>
                        <td>
                            <a href="/editCategory/<%= category.categoryId %>" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/deleteCategory/<%= category.categoryId %>" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this category?')" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
